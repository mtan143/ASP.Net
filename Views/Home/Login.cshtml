@using KeepIt.Models
@model KeepIt.Models.User
@{ ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";}

<link href="https://fonts.googleapis.com/css2?family=Rubik:wght@500&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style>
    #text-white {
        text-align: center;
        color: black;
        padding-top: 15px;
    }



    .title {
        background-color: #e0dede;
        width: 100%;
        height: 50px;
    }



    .detail {
        width: 100%;
        color: black;
        margin-top: 0px;
        text-align: left;
        font-weight: 500;
    }



    .container {
        padding-top: 50px;
        width: 60%;
        padding-bottom: 50px;
    }



    .title-contact {
        background-color: #e0dede;
        height: 60px;
        margin-bottom: 0px;
        padding-bottom: 0px;
        border-radius: 15px 15px 0px 0px;
    }



    .detail-contact {
        padding-top: 20px;
        margin-top: 0px;
        height: 400px;
        margin-bottom: 10px;
        background-color: white;
    }
    .contact:hover {
        box-shadow: 0 0 20px white;
        width: 100%;
        text-decoration: none;
        border-radius: 15px 15px 0px 0px;
    }



    .btn {
        margin-top: 10px;
        text-align: center;
        margin-left: 75px;
    }



    .input {
        text-align: center;
        margin-left: 60px;
    }



    .form-control {
        margin-top: 5px;
    }
    .col-md-2 {
        display: contents;
    }

    .control-label {
        width: 100%;
        margin: 0px;
    }
    .checkbox{
        margin-left:20px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <div class="contact">
                <div class="title-contact"><h2 id="text-white" style="color:black; font-family: 'Poppins';">@ViewBag.Title</h2></div>
                @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="detail-contact">
                        <div class="input">
                            <div class="detail">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })<br />
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })<br />
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="detail">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })<br />
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })<br />
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="btn">
                            <input type="submit" id="aaa" class="btn btn-default text-dark" style="color:black;" value="Log In" />
                        </div>
                        @if (ViewBag.error != null)
                        {
                            <div style="color:red; text-align:center;">@ViewBag.error</div>
                        }
                    </div>

                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}